generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Poker {
  id          Int     @id @default(autoincrement())
  link        String? 
  name        String
  system      String
  autoReveal  Boolean
  showAverage Boolean
  anonymousVoting Boolean?
